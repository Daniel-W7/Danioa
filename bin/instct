#!/bin/bash
#
#获取运行的程序名
PRONAME=`basename $0`
#获取文件运行的当前目录
BINPATH=$(cd "$(dirname "$0")"; pwd)
cd $BINPATH
echo "Start to install tctconfig"
\cp ./tctconfig /usr/bin/
echo "The program file is /usr/bin/tctconfig"
\cp ../conf/tct.conf /etc/
echo "The conf file is /etc/tct.conf"
echo "PACKAGE_PATH=$HOME/tctconfig" >> /etc/tct.conf
echo "The PACKAGE_PATH is $HOME/tctconfig"
chmod +x /usr/bin/tctconfig
echo "tctconfig installed successfully"

